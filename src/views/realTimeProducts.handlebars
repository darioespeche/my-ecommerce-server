<h2>Productos en Tiempo Real</h2>

<form id="addProductForm">
  <input name="title" placeholder="Título" required />
  <input name="description" placeholder="Descripción" required />
  <input name="code" placeholder="Código" required />
  <input name="price" type="number" step="0.01" placeholder="Precio" required />
  <input name="stock" type="number" placeholder="Stock" required />
  <input name="category" placeholder="Categoría" required />
  <button type="submit">Agregar Producto</button>
</form>

<ul id="productsList">
  {{#each products}}
    <li data-id="{{this.id}}">
      {{this.id}}
      -
      {{this.title}}
      - ${{this.price}}
      <span class="deleteBtn">[Eliminar]</span>
    </li>
  {{/each}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>